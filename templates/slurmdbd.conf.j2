SlurmUser=slurm        # Usuario del sistema para SLURM
DebugLevel=info
LogFile=/var/log/slurm/slurmdbd.log
PidFile=/var/run/slurm/slurmdbd.pid
PluginDir={{ slurm_dbd_plugin_dir }}


